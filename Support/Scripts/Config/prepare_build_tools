set -euo pipefail

# "import"
sourc "${BASH_SOURCE[0]%/*}/../utils.sh"

brew update

function brew_install {
  local tool="$1"
  if ! command -v "$tool" &> /dev/null; then
      echo -e "üëé $YELLOW$tool$NOCOLOR is not installed."
      echo -e "üç∫ Installing $YELLOW$tool$NOCOLOR via Homebrew..."
      executeCommand "brew install $tool"
  else
      echo -e "üëç $LIGHT_BLUE$tool$NOCOLOR is already installed."
  fi
}

PACTSWIFTMOCKSERVER_TOOLS=(
  cbindgen
  doxygen
  xcbeautify
  swiftlint
)

for tool in "${PACTSWIFTMOCKSERVER_TOOLS[@]}"; do
  brew_install "$tool"
done
